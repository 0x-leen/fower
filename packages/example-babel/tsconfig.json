{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "jsx": "preserve",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["es2015", "es2016", "dom"],
    "types": ["node"]
  }
}
