{
  "name": "fower",
  "version": "0.0.0",
  "private": true,
  "description": "A style library for rapid UI development.",
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*",
      "website"
    ],
    "nohoist": [
      "**/html-minifier-terser",
      "**/svelte",
      "**/sapper",
      "**/@sapper",
      "*/@docusaurus/*"
    ]
  },
  "scripts": {
    "dev": "lerna run --parallel --stream dev",
    "build": "lerna run --stream build",
    "test": "lerna run --parallel --stream test",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "publish": "lerna publish --force-publish=*",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": "tie-app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forsigner/fower.git"
  },
  "author": "@forsigner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/forsigner/fower/issues"
  },
  "homepage": "https://github.com/forsigner/fower#readme",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/prettier": "^2.2.3",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "coveralls": "^3.1.0",
    "eslint-config-tie-app": "0.0.5",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "react": "17.x",
    "react-dom": "17.x",
    "ts-jest": "^26.5.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  }
}